@page
@model Blackjack.Web.Pages.IndexModel
@{
    ViewData["Title"] = "Blackjack";
}

<h1>Blackjack</h1>

<form method="post">
    <button type="submit" asp-page-handler="Start">Start Game</button>
</form>

@if (!string.IsNullOrWhiteSpace(Model.Message))
{
    <p><strong>@Model.Message</strong></p>
    <p>Player Score: @Model.PlayerScore</p>
    <div class="stack">
        <div>
            <h3>Player</h3>
            <p><strong>@Model.CardScore</strong></p>
            @if (int.Parse(@Model.CardScore) < 21){
                
                <form method="post">
                    <button type="submit" asp-page-handler="PlayerHit">Hit</button>
                    <button type="submit" asp-page-handler="PlayerStand">Stand</button>
                </form>
            }
            else if(int.Parse(@Model.CardScore) == 21){
                <p>Blackjack!</p>  
            }
            else{
                <p>Bust!</p>
                <form method="post">
                    <button type="submit" asp-page-handler="Start">Play again</button>
                </form>
            }
            <textarea readonly style="width:100%;height:100px;">@Model.PlayerHand</textarea>
        </div>
        <div>
            <h3>Dealer</h3>
            <textarea readonly style="width:100%;height:100px;">@Model.DealerHand</textarea>
        </div>
    </div>
}