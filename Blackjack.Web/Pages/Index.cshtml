@page
@model Blackjack.Web.Pages.IndexModel
@{
    ViewData["Title"] = "Blackjack";
}

<h1>Blackjack</h1>

<form method="post">
    <button type="submit" asp-page-handler="Start">Start Game</button>
</form>

@if (!string.IsNullOrWhiteSpace(Model.Message))
{
    <p><strong>@Model.Message</strong></p>
    <div class="stack">
        <div>
            <h3>Player</h3>
            <p><strong>@Model.Score</strong></p>
            <textarea readonly style="width:100%;height:100px;">@Model.PlayerHand</textarea>
        </div>
        <div>
            <h3>Dealer</h3>
            <textarea readonly style="width:100%;height:100px;">@Model.DealerHand</textarea>
        </div>
    </div>
}